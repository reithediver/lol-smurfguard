{
  "name": "league-smurf-detector-backend",
  "version": "2.0.0",
  "description": "Advanced League of Legends smurf detection backend with comprehensive analytics",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "if exist src\\assets xcopy /E /I src\\assets dist\\assets",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "if exist dist rmdir /s /q dist",
    "prebuild": "npm run clean",
    "postbuild": "echo Build completed successfully",
    "railway:build": "npm run build",
    "railway:start": "npm start"
  },
  "keywords": [
    "league-of-legends",
    "smurf-detection",
    "riot-api",
    "gaming-analytics",
    "express",
    "typescript"
  ],
  "author": "SmurfGuard Team",
  "license": "MIT",
  "dependencies": {
    "@logtail/node": "^0.5.5",
    "@logtail/winston": "^0.5.5",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reithediver/lol-smurfguard.git"
  },
  "bugs": {
    "url": "https://github.com/reithediver/lol-smurfguard/issues"
  },
  "homepage": "https://github.com/reithediver/lol-smurfguard#readme"
}
